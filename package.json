{
  "private": true,
  "main": "./worker/script.js",
  "scripts": {
    "build": "yarn build:static && yarn build:sw && yarn build:worker-webpack && yarn build:worker-wrangler",
    "build:static": "ts-node -O '{\"module\": \"commonjs\"}' static-site/build.ts && webpack --config static-site/webpack.config.js",
    "build:sw": "workbox generateSW service-worker/workbox-config.js",
    "build:worker-webpack": "webpack --config cloudflare-worker/webpack.config.js",
    "build:worker-wrangler": "wrangler build",
    "deploy": "./deploy.sh",
    "fmt": "prettier --write './**/*.{css,js,json,md,ts,yaml,yml}'",
    "fmt:check": "prettier -c './**/*.{css,js,json,md,ts,yaml,yml}'"
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.0",
    "@cloudflare/wrangler": "^1.14.1",
    "@types/escape-html": "^1.0.0",
    "@types/node": "^14.14.13",
    "@types/node-fetch": "^2.5.8",
    "@yarnpkg/pnpify": "^2.4.0",
    "dataloader": "^2.0.0",
    "date-fns": "^2.19.0",
    "dotenv": "^8.2.0",
    "emoji-regex": "^9.2.0",
    "escape-html": "^1.0.3",
    "feed": "^4.2.2",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "types-cloudflare-worker": "^1.2.0",
    "typescript": "^4.1.5",
    "webpack": "^5.27.2",
    "webpack-cli": "^4.5.0",
    "workbox-cli": "^6.1.1"
  }
}
