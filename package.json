{
  "private": true,
  "scripts": {
    "build": "yarn build:static && yarn build:sw && yarn build:worker",
    "build:static": "ts-node -O '{\"module\": \"commonjs\"}' static-site/build.ts && webpack --config static-site/webpack.config.js",
    "build:sw": "workbox generateSW service-worker/workbox-config.js",
    "build:worker": "wrangler build",
    "deploy": "./deploy.sh",
    "fmt": "prettier --write './**/*.{css,js,json,md,ts,yaml,yml}'",
    "fmt:check": "prettier -c './**/*.{css,js,json,md,ts,yaml,yml}'"
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.0",
    "@cloudflare/wrangler": "^1.12.2",
    "@types/escape-html": "^1.0.0",
    "@types/node": "^14.14.12",
    "@types/node-fetch": "^2.5.7",
    "dataloader": "^2.0.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "emoji-regex": "^9.2.0",
    "escape-html": "^1.0.3",
    "feed": "^4.2.1",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "pnp-webpack-plugin": "^1.6.4",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "types-cloudflare-worker": "^1.2.0",
    "typescript": "^4.1.3",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "workbox-cli": "^6.0.2"
  }
}
